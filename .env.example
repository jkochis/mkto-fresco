# Marketo Configuration
# Get these from Marketo Admin > LaunchPoint > View Details for your API service
MARKETO_CLIENT_ID=your_marketo_client_id
MARKETO_CLIENT_SECRET=your_marketo_client_secret
# Your Marketo REST API endpoint (e.g., https://123-ABC-456.mktorest.com)
MARKETO_ENDPOINT=https://your-instance.mktorest.com

# Alfresco Configuration
# Your Alfresco instance URL
ALFRESCO_URL=https://alfresco.company.com
# Alfresco user with permissions to create folders and upload files
ALFRESCO_USERNAME=your_alfresco_username
ALFRESCO_PASSWORD=your_alfresco_password
# Base path in Alfresco where emails will be stored (e.g., /Company Home/Marketo Emails)
ALFRESCO_BASE_PATH=/Company Home/Marketo Emails

# Sync Configuration
# Number of days to look back on first sync (default: 90)
SYNC_LOOKBACK_DAYS=90
# Number of emails to process in each batch (default: 50)
SYNC_BATCH_SIZE=50

# Logging
# Log level: DEBUG, INFO, WARN, ERROR (default: INFO)
LOG_LEVEL=INFO
